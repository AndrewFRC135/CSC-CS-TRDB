<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - CSC:CS:TRDB</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/CSCCSTRDB.styles.css" asp-append-version="true" />
</head>
<body class="bg-dark text-light table-dark">
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark bg-secondary border-bottom box-shadow">
            <div class="container-fluid">
                <a class="navbar-brand text-white fw-bold" asp-page="/Index">CSC:CS:TRDB</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-light" asp-page="/Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-light" asp-page="/Participants/Index">Participants</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-light" asp-page="/RefSheet">Referee Sheet</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-light" asp-page="/Admin/Index">Admin</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="text-center bg-gradient w-auto">
        <h1>Custom Song Central</h1>
        <h2>Championship Series - Tournament Referee Database</h2>
    </div>
    <main role="main" class="pb-3">
        @RenderBody()
    </main>

    <footer class="border-top footer bg-secondary text-light">
        <div class="container-fluid">
            &copy; 2024 - Custom Songs Central : Championship Series
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>